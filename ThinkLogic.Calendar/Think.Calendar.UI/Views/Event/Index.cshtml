@model CalendarEventDTO
@{
    ViewData["Title"] = $"{Model.Title} -  Event";
}
<div class="container">
    <h2>@ViewData["Title"]</h2>
    <div class="form-horizontal">
        <div class="mb-3">
            <label class="col-md-2 control-label">Title</label>
            <div class="col-md-5">
                <input readonly class="form-control" value="@Model.Title" />
            </div>
        </div>
        <div class="mb-3">
            <label class="col-md-2 control-label">Description</label>
            <div class="col-md-5">
                <input readonly class="form-control" value="@Model.Description" />
            </div>
        </div>
        <div class="mb-3">
            <label class="col-md-2 control-label">Location</label>
            <div class="col-md-5">
                <input readonly class="form-control" value="@Model.Location" />
            </div>
        </div>
        <div class="mb-3">
            <label class="col-md-2 control-label">Start Date</label>
            <div class="col-md-5">
                <input readonly class="form-control" value="@Model.StartDate.ToString()" />
            </div>
        </div>
        <div class="mb-3">
            <label class="col-md-2 control-label">End Date</label>
            <div class="col-md-5">
                <input readonly class="form-control" value="@Model.EndDate.ToString()" />
            </div>
        </div>
        <div class="mb-3">
            <label class="col-md-2 control-label">E-mail</label>
            <div class="col-md-5">
                <input readonly class="form-control" value="@Model.Email" />
            </div>
        </div>
        <div class="form-group">
            <div class="d-flex flex-row justify-content-end">
                <input onclick="editEvent(@Model.Id)" value="Edit" class="btn btn-success" />
            </div>
        </div>
    </div>
</div>


@section scripts
    {
    <script type="text/javascript">

        function editEvent(id) {
            window.location.href = `/Event/Edit/${id}`;
        }

    </script>
}